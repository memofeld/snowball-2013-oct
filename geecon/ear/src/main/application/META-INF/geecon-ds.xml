<?xml version="1.0" encoding="UTF-8"?>

<datasources xmlns="http://www.jboss.org/ironjacamar/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <datasource jndi-name="java:jboss/datasources/geeconDS" pool-name="geecon"
        enabled="true" use-java-context="true">
        <connection-url>jdbc:mariadb://localhost:3306/geecon</connection-url>
        <driver>mariadb</driver>
        <security>
            <user-name>geecon</user-name>
            <password>geecon</password>
        </security>
    </datasource>
</datasources>
 